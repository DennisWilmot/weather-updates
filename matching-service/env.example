# Matching Service Environment Variables
# Copy this file to .env and fill in your values

# Database Connection
# PostgreSQL connection string for loading planning problems
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/hurricane_melissa

# Server Configuration
# Port to run the server on (default: 3001)
PORT=3001

# Hostname to bind to (default: 0.0.0.0)
# Use 127.0.0.1 for localhost-only, 0.0.0.0 for all interfaces
HOSTNAME=0.0.0.0

# Environment
# Options: development, production, staging
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins, or '*' for all origins
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=*

# Logging
# Options: debug, info, warn, error
LOG_LEVEL=info

# Planning Algorithm Configuration (optional)
# Maximum distance in km to consider for warehouse-community matching
# Default: 500
MAX_DISTANCE_KM=500

# Fairness penalty weight (0-1)
# Higher values prioritize equitable distribution
# Default: 0.3
FAIRNESS_WEIGHT=0.3

# Risk score weight (0-1)
# Higher values prioritize lower-risk routes
# Default: 0.2
RISK_WEIGHT=0.2

